{
  "compilerOptions": {
    "outDir": "./dist/wasm",
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "ESNext",
    "rootDir": "./",
    "allowJs": false,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["dist/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}